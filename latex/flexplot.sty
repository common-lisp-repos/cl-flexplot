\RequirePackage{pgfcore}

\newcommand{\flexaxisannotation}[1]{$#1$}

\newcommand{\includeflexplot}[3]{%
{%
\newcommand{\ax}{#1}%
\newcommand{\ay}{#2}%
\newcommand{\rc}[2]{\pgfpointadd%
  {\pgfpointscale{##1}{\pgfpoint{\ax}{0}}}%
  {\pgfpointscale{##2}{\pgfpoint{0}{\ay}}}}%
\newcommand{\ptc}[2]{\pgfpoint{##1pt}{##2pt}}%
\newcommand{\emc}[2]{\pgfpoint{##1em}{##2em}}%
\newcommand{\cc}[6]{\pgfpointadd{\pgfpointadd{\rc{##1}{##4}}{\ptc{##2}{##5}}}{\emc{##3}{##6}}}%
\begin{pgfpicture}%
\makeatletter%
\input{#3}%
\makeatother%
\end{pgfpicture}}}

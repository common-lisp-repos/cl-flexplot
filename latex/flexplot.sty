\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{flexplot}[2012/06/30  LaTeX code for the cl-flexplot Common Lisp library]

\RequirePackage{pgfcore}

\newcommand{\includeflexplot}[3]{%
\newcommand{\ax}{#1}%
\newcommand{\ay}{#2}%
\newcommand{\rc}[2]{\pgfpointadd%
  {\pgfpointscale{##1}{\pgfpoint{\ax}{0}}}%
  {\pgfpointscale{##2}{\pgfpoint{0}{\ay}}}}%
\newcommand{\ac}[2]{\pgfpoint{##1pt}{##2pt}}%
\newcommand{\cc}[4]{\pgfpointadd{\rc{##1}{##3}}{\ac{##2}{##4}}}%
\begin{pgfpicture}%
\makeatletter%
\input{#3}%
\makeatother\end{pgfpicture}}
